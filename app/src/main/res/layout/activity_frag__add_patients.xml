<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Frag_AddPatients"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="370dp"
        android:singleLine="true"
        android:text="Kin / Guardian"
        android:textColor="#000000"
        android:textSize="20dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Add Patient"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/image_browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1003dp"
        android:layout_marginTop="250dp"
        android:ems="9"
        android:text="Browse" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="250dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="Patient's Information"/>

    <EditText
        android:id="@+id/reg_patientfname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="250dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/input_outline"
        android:ems="9"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/reg_patientmname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="450dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/input_outline"
        android:ems="9"
        android:hint="Middle Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/reg_patientlname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="650dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/input_outline"
        android:ems="16"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="170dp"
        android:text="Gender"
        android:textColor="#000000"

        android:textSize="20dp" />

    <Spinner
        android:id="@+id/reg_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="200dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="353dp"
        android:layout_marginTop="170dp"
        android:text="Marital Status"
        android:textColor="#000000"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/reg_marital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="353dp"
        android:layout_marginTop="200dp" />

    <EditText
        android:id="@+id/reg_religion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/input_outline"
        android:ems="8"
        android:hint="Religion"
        android:padding="10dp"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/reg_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="430dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/input_outline"
        android:ems="6"
        android:hint="Age"
        android:padding="10dp"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/reg_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/input_outline"
        android:ems="23"
        android:hint="Address"
        android:padding="10dp"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/reg_contact1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="290dp"
        android:background="@drawable/input_outline"
        android:ems="9"
        android:hint="Cellphone Number"
        android:padding="10dp"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/reg_contact2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="450dp"
        android:layout_marginTop="290dp"
        android:background="@drawable/input_outline"
        android:ems="9"
        android:hint="Telephone Number"
        android:padding="10dp"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/reg_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="650dp"
        android:layout_marginTop="290dp"
        android:background="@drawable/input_outline"
        android:ems="16"
        android:hint="Email Address"
        android:padding="10dp"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/reg_occupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="565dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/input_outline"
        android:ems="9"
        android:hint="Occupation"
        android:padding="10dp"
        android:singleLine="true"/>


    <EditText
        android:id="@+id/reg_kin_fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="250dp"
        android:layout_marginTop="405dp"
        android:background="@drawable/input_outline"
        android:ems="9"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/reg_kin_mname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="450dp"
        android:layout_marginTop="405dp"
        android:background="@drawable/input_outline"
        android:ems="9"
        android:hint="Middle Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/reg_kin_lname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="650dp"
        android:layout_marginTop="405dp"
        android:background="@drawable/input_outline"
        android:ems="16"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/reg_kin_contact1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/input_outline"
        android:ems="9"
        android:hint="Cellphone Number"
        android:padding="10dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/reg_kin_contact2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="450dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/input_outline"
        android:ems="9"
        android:hint="Telephone Number"
        android:padding="10dp"
        android:singleLine="true" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:ems="12"
        android:text="register patient" />

    <ImageButton
        android:id="@+id/patient_avatarselect"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="1000dp"
        android:layout_marginTop="100dp"
        android:adjustViewBounds="true"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        tools:src="@tools:sample/avatars" />

</RelativeLayout>